<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple">
    <ImageView
        android:id="@+id/imageView_rowToppingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/common_google_signin_btn_text_dark"/>
    <TextView
        android:id="@+id/textView_rowToppingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView_rowToppingImage"
        android:layout_centerVertical="true"
        android:text="chooseTopping"/>
    <ImageButton
        android:id="@+id/imageButton_rowAddTopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <ImageButton
        android:id="@+id/imageButton_rowRemoveTopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageButton_rowAddTopping"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/textView_rowToppingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageButton_rowRemoveTopping"
        android:layout_centerVertical="true"
        android:text="price"/>
</RelativeLayout>